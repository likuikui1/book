<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/tittlebar" />

        <RelativeLayout
            android:id="@+id/mine_notlogin_img_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_notlogin_img_bg" >

            <TextView
                android:id="@+id/mine_notlogin_hint_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:text="你还没有登录/注册?"
                android:textColor="#999999" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mine_notlogin_hint_txt"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/mine_notlogin_register_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="18dp"
                    android:background="@drawable/my_notlogin_registerbutton_circle"
                    android:text="注册"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/mine_notlogin_login_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="18dp"
                    android:background="@drawable/my_notlogin_loginbutton_circle"
                    android:text="登录"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_notlogin_img_bg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mine_notlogin_message_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/my_notlogin_icon_message"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/my_notlogin_icon_go"
                android:text="我的消息"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="5dp"
                android:background="#999999" />

            <TextView
                android:id="@+id/mine_notlogin_product_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/my_notlogin_icon_book"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/my_notlogin_icon_go"
                android:text="我的商品"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="5dp"
                android:background="#999999" />

            <TextView
                android:id="@+id/mine_notlogin_wishlist_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/my_notlogin_icon_wishlist"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/my_notlogin_icon_go"
                android:text="我的心愿单"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="5dp"
                android:background="#999999" />

            <TextView
                android:id="@+id/mine_notlogin_set_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/my_notlogin_icon_set"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/my_notlogin_icon_go"
                android:text="设置"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="5dp"
                android:background="#999999" />

            <TextView
                android:id="@+id/mine_notlogin_feedback_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/my_notlogin_icon_opinion"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/my_notlogin_icon_go"
                android:text="意见反馈"
                android:textSize="15sp" />
        </LinearLayout>

        <include layout="@layout/wishlist_main_tab" />
    </LinearLayout>

</RelativeLayout>