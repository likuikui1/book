<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mine_head_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/mine_head_linear_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mine_prompt_message_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:text="你还未注册/登录?"
            android:textColor="#666666"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mine_register_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/mine_register_button_bg"
                android:text="注册"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/mine_login_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@id/mine_register_button"
                android:background="@drawable/mine_login_button_bg"
                android:text="登录"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/activity_mine_content" />
</LinearLayout>
