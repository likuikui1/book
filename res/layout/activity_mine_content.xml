<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_below="@+id/mine_head_linear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/mine_message"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/mine_message_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:src="@drawable/mine_message_icon"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/mine_message_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/mine_message_icon"
                android:text="我的消息"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/mine_message_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mine_number_icon_bg"
                android:layout_toLeftOf="@+id/mine_check_message"
                android:layout_marginRight="16dp"
                android:visibility="invisible"/>

            <ImageView
                android:id="@id/mine_check_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mine_right_icon"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="#999999"/>

        <RelativeLayout
            android:id="@+id/mine_goods"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/mine_goods_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="22dp"
                android:src="@drawable/mine_wares_icon"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/mine_goods_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/mine_goods_icon"
                android:text="我的商品"
                android:textColor="#333333"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/mine_goods_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_number_icon_bg"
                android:layout_toLeftOf="@+id/mine_check_goods"
                android:layout_marginLeft="16dp"
                android:visibility="invisible"/>

            <ImageView
                android:id="@id/mine_check_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_right_icon"
                android:layout_marginLeft="16dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="#999999"/>

        <RelativeLayout
            android:id="@+id/mine_wishlist"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/mine_wishlist_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="22dp"
                android:src="@drawable/mine_wishlist_icon"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/mine_wishlist_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/mine_wishlist_icon"
                android:text="我的心愿单"
                android:textColor="#333333"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/mine_wishlist_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_number_icon_bg"
                android:layout_toLeftOf="@+id/mine_check_wishlist"
                android:layout_marginLeft="16dp"
                android:visibility="invisible"/>

            <ImageView
                android:id="@id/mine_check_wishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_right_icon"
                android:layout_marginLeft="16dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="#999999"/>

        <RelativeLayout
            android:id="@+id/mine_setting"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/mine_setting_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="22dp"
                android:src="@drawable/mine_setting_icon"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/mine_setting_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/mine_setting_icon"
                android:text="设置"
                android:textColor="#333333"
                android:textSize="14sp" />



            <ImageView
                android:id="@+id/mine_check_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_right_icon"
                android:layout_marginLeft="16dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="#999999"/>

        <RelativeLayout
            android:id="@+id/mine_feedback"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/mine_feedback_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="22dp"
                android:src="@drawable/mine_feedback_icon"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/mine_feedback_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/mine_feedback_icon"
                android:text="意见反馈"
                android:textColor="#333333"
                android:textSize="14sp" />



            <ImageView
                android:id="@+id/mine_check_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_right_icon"
                android:layout_marginLeft="16dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="#999999"/>


    </LinearLayout>




</LinearLayout>